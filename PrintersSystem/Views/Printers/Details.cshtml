@model PrinterManagement.Models.Printer

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Printer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Serial)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Serial)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brand)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrinterType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrinterType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PersonInCharge)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PersonInCharge)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location.Name)
        </dd>
    </dl>
</div>

@if (Model.Maintances != null && Model.Maintances.Count() > 0)
{
    <h4>Maintances @Model.Name</h4>

    <div class="row">
        <div class="col-md-offset-1 col-md-11">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => Model.Maintances.ElementAt(0).Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => Model.Maintances.ElementAt(0).Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => Model.Maintances.ElementAt(0).Technician)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => Model.Maintances.ElementAt(0).Location)
                    </th>
                </tr>

                @foreach (var item in Model.Maintances)
                {
                    <tr>
                        <td>
                            @Html.TextBoxFor(x => item.Name, new { @class = "form-control", @readonly = "readonly" })
                        </td>
                        <td>
                            @Html.TextBoxFor(x => item.Date, new { @class = "form-control", @readonly = "readonly" })
                        </td>
                        <td>
                            @Html.TextBoxFor(x => item.Technician, new { @class = "form-control", @readonly = "readonly" })
                        </td>
                        <td>
                            @Html.TextBoxFor(x => item.Location.Name, new { @class = "form-control", @readonly = "readonly" })
                        </td>
                    </tr>
                }
            </table>
        </div>

    </div>
}

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
